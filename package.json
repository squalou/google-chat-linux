{
  "name": "google-chat-linux",
  "version": "5.27.22-1",
  "description": "Google Hangouts Chat unofficial linux app",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "github.com:squalou/google-chat-linux.git",
  "homepage": "https://github.com/squalou/google-chat-linux",
  "author": "Roberto Fasciolo <rob@robyf.net> (https://www.robyf.net/)",
  "license": "WTFPL",
  "build": {
    "appId": "Google Chat Linux",
    "linux": {
      "desktop": {
        "Name": "Google Chat Linux"
      },
      "category": "Network;InstantMessaging",
      "target": "deb"
    },
    "deb": {
      "depends": [
        "xdg-desktop-portal"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "extraResources": [
      {
        "filter": [
          "**/*"
        ],
        "from": "assets"
      }
    ]
  },
  "engines": {
    "node": "18.14.0",
    "npm": ">=8.15.0"
  },
  "dependencies": {
    "electron-context-menu": "^3.5.0"
  },
  "devDependencies": {
    "electron": "27.0.3",
    "electron-builder": "^24.4.0"
  }
}
